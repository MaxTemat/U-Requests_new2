<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".UserInfoActivity">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="93dp"
        android:layout_height="89dp"
        android:layout_marginTop="116dp"
        android:src="@drawable/logo5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="314dp"
        android:layout_height="343dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13">

        <EditText
            android:id="@+id/user_first_name_Et"
            android:layout_width="250dp"
            android:layout_height="67dp"
            android:layout_marginTop="10dp"
            android:background="#0B0E1B"
            android:inputType="textPersonName"
            android:hint="Enter your first name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#636060"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_last_name_Et"
            android:layout_width="250dp"
            android:layout_height="67dp"
            android:layout_marginTop="10dp"
            android:background="#0B0E1B"
            android:inputType="textPersonName"
            android:hint="Enter your last name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#636060"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_password_Et"
            android:layout_width="250dp"
            android:layout_height="67dp"
            android:layout_marginTop="10dp"
            android:background="#0B0E1B"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#636060"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_confirmPassword_Et"
            android:layout_width="250dp"
            android:layout_height="67dp"
            android:layout_marginTop="10dp"
            android:background="#0B0E1B"
            android:hint="Confirm your password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#636060"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/userInfo_next_btn"
        android:layout_width="179dp"
        android:layout_height="61dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="67dp"
        android:background="#673AB7"
        android:text="Next"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="195dp"
        android:layout_height="160dp"
        android:layout_marginEnd="72dp"
        android:src="@drawable/cercle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInfo_next_btn" />


</LinearLayout>