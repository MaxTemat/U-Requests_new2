<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="358dp"
        android:layout_height="638dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:layout_marginTop="70dp"
                android:id="@+id/textView16"
                android:layout_width="207dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Choose your school"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="52dp" />

            <Spinner
                android:id="@+id/spinner_school"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:background="#BCD2F8"
                android:gravity="center"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="121dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="207dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Choose your profile"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="52dp" />

            <Spinner
                android:id="@+id/spinner_profile"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:background="#BCD2F8"
                android:gravity="center"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="121dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="300dp"
                android:layout_height="7dp"
                android:background="#673AB7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="244dp"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="Choose department"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="83dp"
                tools:layout_editor_absoluteY="211dp" />

            <Spinner
                android:id="@+id/spinner_department"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:background="#BCD2F8"
                android:gravity="center"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="283dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="300dp"
                android:layout_height="7dp"
                android:background="#673AB7" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="251dp"
                android:layout_height="51dp"
                android:gravity="center"
                android:text="Choose option"
                android:textColor="#03A9F4"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="375dp" />

            <Spinner
                android:id="@+id/spinner_option"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:background="#BCD2F8"
                android:gravity="center"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="446dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="300dp"
                android:layout_height="7dp"
                android:background="#673AB7" />
            <LinearLayout
                android:id="@+id/linearLayout_corses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="238dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Choose corse"
                    android:textColor="#03A9F4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="88dp"
                    tools:layout_editor_absoluteY="537dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            tools:layout_editor_absoluteX="3dp"
                            tools:layout_editor_absoluteY="591dp">

                            <CheckBox
                                android:id="@+id/checkBox_cplus"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:background="#673AB7"
                                android:text="C++"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck" />

                            <CheckBox
                                android:id="@+id/checkBox_c"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="#673AB7"
                                android:text="C"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck" />

                            <CheckBox
                                android:id="@+id/checkBox_java"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="#673AB7"
                                android:text="Java"
                                android:textAlignment="viewStart"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            tools:layout_editor_absoluteX="3dp"
                            tools:layout_editor_absoluteY="591dp">

                            <CheckBox
                                android:id="@+id/checkBox_csharp"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:background="#673AB7"
                                android:text="C#"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck" />

                            <CheckBox
                                android:id="@+id/checkBox_sgbd"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="#673AB7"
                                android:text="Sgbd"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck" />

                            <CheckBox
                                android:id="@+id/checkBox_android"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="#673AB7"
                                android:text="Android"
                                android:textAlignment="viewStart"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            tools:layout_editor_absoluteX="3dp"
                            tools:layout_editor_absoluteY="591dp">

                            <CheckBox
                                android:id="@+id/checkBox_si"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:background="#673AB7"
                                android:text="Si"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <CheckBox
                                android:id="@+id/checkBox_fr"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="#673AB7"
                                android:text="Francais"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <CheckBox
                                android:id="@+id/checkBox_en"
                                android:layout_width="90dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="#673AB7"
                                android:text="Anglais"
                                android:textAlignment="viewStart"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>


            </LinearLayout>
            <Button
                android:id="@+id/button_profile_next"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#30E407"
                android:text="Next"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>